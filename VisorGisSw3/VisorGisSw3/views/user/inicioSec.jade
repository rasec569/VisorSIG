extends ../templates/default

block content
  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      
      if mensaje.length > 0
        div(class='alert alert-success' role='alert')= mensaje

      div(class='panel panel-default')
        div(class='panel-heading')= 'Iniciar Sesion'
        div(class='panel-body')
          form(action='http://localhost:3000/login/inicioSec' method='post' autocomplete='off')
            div(class='form-group')
              label(for="us")= 'Usuario'
              input(type='text' name='username'  placeholder='Usuario' class='form-control')
            div(class='form-group')
              label(for="pas")= 'Password'
              input(type='password' name='password' placeholder='Password' class='form-control')
            button(type="submit" class='btn btn-default')= 'Iniciar Sesion'

      //if authmessage.length > 0
        div(class='alert alert-danger' role='alert')= authmessage