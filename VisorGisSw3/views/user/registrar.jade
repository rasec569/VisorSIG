extends ../templates/default

block content
  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Registrarme'
        div(class='panel-body')
          form(action='http://localhost:3000/login/registrar' method='post' autocomplete='off')
            div(class='form-group')
              label(for="ide")= 'Idetificación'
              input(type='text' name='ide' id='ide' placeholder='Idetificación' class='form-control')
            div(class='form-group')
              label(for="nom")= 'Nombre'
              input(type='text' name='nom' id='nom' placeholder='Nombre' class='form-control')
            div(class='form-group')
              label(for="ape")= 'Apellido'
              input(type='text' name='ape' id='ape' placeholder='Apellido' class='form-control')
            div(class='form-group')
              label(for="us")= 'Usuario'
              input(type='email' name='us' id='us' placeholder='Usuario' class='form-control')
            div(class='form-group')
              label(for="pas")= 'Password'
              input(type='password' name='pas' id='pas' placeholder='Password' class='form-control')
            div(class='form-group')
              label(for="email")= 'Email'
              input(type='email' name='email' id='email' placeholder='Email' class='form-control')
            button(type="submit" class='btn btn-default')= 'Registrarme'